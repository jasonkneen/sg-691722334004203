// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../main.db"
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  entries Entry[]
}

model Entry {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  weight    Float?
  location  String?
  notes     String?
  imageUrl  String?
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tags      Tag[]
}

model Tag {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  entries Entry[]
}